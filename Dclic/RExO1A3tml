    <script>
	function verifierAge() {
    var age = prompt("Veuillez entrer votre âge : ");
    age = parseInt(age);

    if (age < 18) {
        alert("Vous êtes mineur.");
    } else {
        alert("Vous êtes majeur.");
    }
	</script> <!-- Lien vers le fichier JS externe -->
</head>
<body>
    <P>Exercice 1.a: Vérification de l'âge</p>
    <button onclick="verifierAge()">Vérifier votre âge</button>
</body>
